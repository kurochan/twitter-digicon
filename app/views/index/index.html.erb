<% unless session[:oauth] %>
  <% form_tag :oauth, method: :get do |f| %>
    <%= submit_tag '認証してツイート' %>
  <% end %>
<% else %>
  <%= form_tag :update, method: :post do %>
    <%= text_field_tag :text %>
    <%= submit_tag 'ツイート' %>
  <% end %>
  <% form_tag :logout, method: :get do |f| %>
    <%= submit_tag 'ログアウト' %>
  <% end %>
<% end %>
<div id="friends_timeline">
  <dl>
    <% @tweets.each do |t| %>
      <dt><%= image_tag t.user.profile_image_url, size: '40x40' %></dt>
      <dd><%= t.user.name %></dd>
      <dd><%= t.text %></dd>
    <% end %>
  </dl>
</div>
